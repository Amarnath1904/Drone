<DroneControlApp>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: "Drone Control Interface"
        font_size: 24
        bold: True
        size_hint_y: None
        height: 40

    Label:
        id: pitch_label
        text: "Pitch: 0.00"
        font_size: 18

    Label:
        id: roll_label
        text: "Roll: 0.00"
        font_size: 18

    Label:
        id: gps_label
        text: "GPS: Lat 0.0000, Lon 0.0000, Alt 0.00"
        font_size: 18

    Label:
        id: pitch_output_label
        text: "Pitch Output (PID): 0.00"
        font_size: 18

    Label:
        id: roll_output_label
        text: "Roll Output (PID): 0.00"
        font_size: 18
